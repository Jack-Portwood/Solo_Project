
<form  method="POST" action="/exhibits">

  <label for= "name"> Exhibit Name:</label>
  <input type = "text" name="exhibit_name"
  id="name"  value="<%= @artist.name %>"/>/>

  <label for= "style"> Exhibit Style:</label>
  <input type = "text" name="exhibit_style"
  id="style"/>

  <label for= "info"> Exhibit Info:</label>
  <input type = "text" name="Exhibit_info"
  id="info"/>

  <label for="artist_id">Artist ID:</label>
    <select name="artist_id" id="artist_id">
      <% for artist in @artists %>
          <option value=<%= artist.id %>><%= artist.name %></option>
      <% end %>
    </select>

  <input type="submit" value=" Edit Exhibit"
</form>
